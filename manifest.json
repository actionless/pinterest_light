{
	"manifest_version": 2,
	"name": "pinterest_light",
	"version": "0.4.2",

	"browser_action": {
		"default_title": "Pinterest Button Light",
		"default_icon": {
			"48": "icons/icon.png",
			"96": "icons/icon@2x.png"
		}
	},

	"permissions": [
		"activeTab",
		"tabs",
		"*://*.pinterest.com/pin-builder/*"
	],
	"background": {
		"scripts": ["background.js"]
	}

}
