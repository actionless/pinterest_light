{
	"manifest_version": 2,
	"name": "pinterest_light",
	"version": "0.2",

	"page_action": {
		"default_title": "Pinterest Button light",
		"default_icon": {
			"48": "icons/icon.png",
			"96": "icons/icon@2x.png"
		},
		"show_matches": ["http://*/*", "https://*/*"]
	},

	"permissions": ["activeTab", "tabs", "declarativeContent"],
	"background": {
		"scripts": ["background.js"],
		"persistent": false
	}

}
